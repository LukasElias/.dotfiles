{
    "layer": "top", // Waybar at top layer
    "height": 30, // Waybar height (to be removed for auto height)
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window",
        "custom/media"
    ],
    "modules-center": [
        "clock",
    ],
    "modules-right": [
        "mpd",
        "idle_inhibitor",
		"custom/notification",
        "pulseaudio",
        "cpu",
        "memory",
        "temperature",
        "keyboard-state",
        "custom/power"
    ],
    // Modules configuration
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
	"custom/notification": {
		"tooltip": false,
		"format": "{icon}",
